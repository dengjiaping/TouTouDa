<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.AppCompat.Light.ActionBar.My" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/actionbar.title.style</item>
        <item name="background">@color/actionbar</item>
        <item name="displayOptions">homeAsUp|showTitle</item>
        <item name="indeterminateProgressStyle">@style/IndeterminateProgress</item>
    </style>

    <style name="IndeterminateProgress" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">32dip</item>
        <item name="android:maxWidth">32dip</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

    <style name="Widget.AppCompat.Light.ActionBar.My.NoHomeAsUp" parent="Widget.AppCompat.Light.ActionBar.My">
        <item name="displayOptions">showTitle</item>
    </style>

    <!-- title -->
    <style name="actionbar.title.style" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- menu -->
    <style name="MyABmenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>