<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        layout="@layout/custom_menu_actionbar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/tab_ll"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:background="@color/shop_tab_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="陪游群"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tab1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的群"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/tab_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tab_ll"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"></android.support.v4.view.ViewPager>

    <!--   <com.quanliren.quan_one.pull.PullToRefreshListView
          xmlns:ptr="http://schemas.android.com/apk/res/com.quanliren.quan_two.activity"
          android:id="@+id/listview"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:cacheColorHint="#00000000"
          android:divider="@null"
          android:drawSelectorOnTop="false"
          android:fadingEdge="none"
          android:listSelector="#00000000"
          android:scrollbars="vertical"
          ptr:pullmode="both" /> -->

</LinearLayout>