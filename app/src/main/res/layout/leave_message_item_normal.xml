<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="61dp"
    android:background="@drawable/menu_btm_selector"
    android:paddingBottom="8dp"
    android:paddingLeft="0dp"
    android:paddingRight="8dp"
    android:paddingTop="0dp">

    <com.quanliren.quan_two.custom.RoundAngleImageView
        android:id="@+id/userlogo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:roundHeight="5dp"
        app:roundWidth="5dp" />

    <TextView
        android:id="@+id/messagecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_newmessage"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/top_ll"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignTop="@id/userlogo"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/userlogo"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/username"
            android:background="@drawable/girl_icon"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/time"
            android:textSize="12sp" />
    </RelativeLayout>


    <com.quanliren.quan_two.custom.emoji.EmoticonsTextView
        android:id="@+id/signature"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/top_ll"
        android:layout_alignBottom="@+id/userlogo"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="bottom"
        app:imgSize="25dp"
        android:textColor="@color/signature"
        android:textSize="12sp" />

</RelativeLayout>