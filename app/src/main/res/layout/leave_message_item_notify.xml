<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.quanliren.quan_two.custom.MessageCustomLinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg"
        android:orientation="horizontal"
        app:btn_num="1" >

        <com.quanliren.quan_two.custom.MessageCustomRelativeLayout
            android:id="@+id/click_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <com.quanliren.quan_two.custom.RoundAngleImageView
                android:id="@+id/userlogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:roundHeight="5dp"
                app:roundWidth="5dp" />

            <RelativeLayout
                android:id="@+id/top_ll"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_alignTop="@id/userlogo"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/userlogo"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:text="这是名字啊啊啊啊啊啊啊啊啊啊啊"
                    android:textColor="@color/quan_username"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2小时前"
                    android:textColor="@color/time"
                    android:textSize="12sp" />
            </RelativeLayout>

            <com.quanliren.quan_two.custom.emoji.EmoticonsTextView
                android:id="@+id/signature"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_alignLeft="@id/top_ll"
                android:layout_below="@id/top_ll"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:textColor="@color/signature"
                android:textSize="14sp" />

        </com.quanliren.quan_two.custom.MessageCustomRelativeLayout>

        <TextView
            android:id="@+id/delete"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/delete"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </com.quanliren.quan_two.custom.MessageCustomLinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/drivers_height"
        android:background="@drawable/seting_drivers" />

</LinearLayout>