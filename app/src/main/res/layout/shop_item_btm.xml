<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@drawable/menu_mid_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="1个月会员"
            android:textColor="@color/title"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="30dp">

            <com.a.dd.CircularProgressButton
                android:id="@+id/price"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cpb_colorIdle="@color/vipbtn"
                app:cpb_colorIndicator="@color/vipbtn"
                app:cpb_cornerRadius="5dp"
                app:cpb_textError="失败"
                app:cpb_textIdle="¥998.00" />
        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/filter_tab_border" />

</LinearLayout>